<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Signup" >

     <EditText
        android:id="@+id/etUserSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etPassSU"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:hint="Username"
        android:ems="10" />
    
    
    <EditText
        android:id="@+id/etPassSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUserSU"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:ems="10" />

    <EditText
        android:id="@+id/etTownSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassSU"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="Your Town"
        android:ems="10" />

   
    <EditText
        android:id="@+id/etEmailSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etTownSU"
        android:layout_below="@+id/etTownSU"
        android:layout_marginTop="19dp"
        android:hint="E-mail address"
        android:ems="10" />

    <Button
        android:id="@+id/bDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etEmailSU"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etEmailSU"
        android:text="Done" />

</RelativeLayout>
