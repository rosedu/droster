<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkgrcolor"
    tools:context=".Home" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:background="#BBBBBB">

            <ImageView
                android:id="@+id/barLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.2"
                android:src="@drawable/mini_logo" />

            <TextView
                android:id="@+id/logotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="CityGuide"
                android:layout_weight="0.6"
                android:textSize="25dp" />
            
            <ImageButton
		        android:id="@+id/barSearch"
		        android:layout_height="50dp"
		        android:layout_width="50dp"
		        android:layout_weight="0.2"		
		        android:src="@drawable/ic_search" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp" 
            android:background="#CCCCCC">

            
            
            <LinearLayout
				android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
       
		        android:clickable="true"
    		    android:onClick="pressTab1"
		        android:orientation="horizontal" >

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:orientation="vertical" >

 		           <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:singleLine="true"
		                android:text="@string/textTab1"
		                android:textColor="#000000"
		                android:textSize="13sp"
		                android:textStyle="bold" />
		        </LinearLayout>
		    </LinearLayout>
            
            <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
		       
		        android:clickable="true"
		        android:onClick="pressTab2"
		        android:orientation="horizontal" >

		       	<LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:orientation="vertical" >

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:singleLine="true"
		                android:text="@string/textTab2"
		                android:textColor="#000000"
		                android:textSize="13sp"
		                android:textStyle="bold" />
       		 	</LinearLayout>
    		</LinearLayout>
            
           
            <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_weight="1"
				
		        android:clickable="true"
		        android:onClick="pressTab3"
		        android:orientation="horizontal" >

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:orientation="vertical" >

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:singleLine="true"
		                android:text="@string/textTab3"
		                android:textColor="#000000"
		                android:textSize="13sp"
		                android:textStyle="bold" />
		        </LinearLayout>
		    </LinearLayout>
            
            
            
        </LinearLayout>

        <TextView
            android:id="@+id/textOras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(ORAS) Tour"
            android:padding="10dp"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/textData"
	            android:layout_width="match_parent"
	            android:layout_weight="0.5"
	            android:layout_height="wrap_content"
	            android:text="(DATA)" />
	        
	        <TextView
	            android:id="@+id/textCreator"
	            android:layout_width="match_parent"
	            android:layout_weight="0.5"
	            android:layout_height="wrap_content"
	            android:text="Creator: (CREATOR)" />
		</LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/textGhid"
	            android:layout_width="match_parent"
	            android:layout_weight="0.5"
	            android:layout_height="wrap_content"
	            android:text="Guide: (GHID)" />
	        
	        <TextView
	            android:id="@+id/textDescriere"
	            android:layout_width="match_parent"
	            android:layout_weight="0.5"
	            android:layout_height="wrap_content"
	            android:text="DESCRIERE" />
		</LinearLayout>

         <TextView
             android:id="@+id/textParticipanti"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Other tourists" 
             android:paddingTop="10dp"
             android:paddingLeft="20dp"
             android:textSize="25dp"/>

         <ListView
             android:id="@+id/listView1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="10dp" >
         </ListView>

    </LinearLayout>

    

</RelativeLayout>
