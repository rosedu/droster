<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cityguide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:launchMode="singleTop"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <service 
            android:enabled="true"
            android:name=".MyService"
            android:process=":test_process">    
        </service>
        
        <receiver android:name="com.example.cityguide.NetWatcher">
     		<intent-filter>
          		<action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
     		</intent-filter>
		</receiver>
        
        <activity
            android:name="com.example.cityguide.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cityguide.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.cityguide.Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.example.cityguide.Signup"
            android:label="@string/title_activity_signup" >
        </activity>
        
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest>
